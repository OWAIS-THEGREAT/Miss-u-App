<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/prime1">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baseline_person_24"
        android:layout_marginStart="5dp"
        />

    <TextView
        android:id="@+id/navName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/circleimage"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingTop="8dp"
        />
    <TextView
        android:id="@+id/navEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/navName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:textColor="#A5A1A7"
        android:text="Email"

        />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/navEmail"
        android:layout_marginTop="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>